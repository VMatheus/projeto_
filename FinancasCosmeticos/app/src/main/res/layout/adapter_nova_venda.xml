<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.tecnoia.matheus.financascosmeticos.utils.RobotoUtils
                android:textColor="@color/album_title"

                android:id="@+id/text_nome_separacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:maxLength="32"
                android:padding="2dp"
                android:text="QUASAR SURF DES. COLÃ”NIA, 125ML"
                android:textSize="@dimen/album_title" />
            <com.tecnoia.matheus.financascosmeticos.utils.RobotoUtils
                android:padding="2dp"
                android:text="R$ 52,00"
                android:id="@+id/text_saldo_itens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/album_title"/>
        </LinearLayout>



        <com.tecnoia.matheus.financascosmeticos.utils.OpenSansUtils
            android:id="@+id/text_unidades_separacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="5un"
            android:textSize="@dimen/album_title" />

        <ImageView
            android:tint="@color/colorAccent"
            android:layout_gravity="center"
            android:id="@+id/image_remover_separacao"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_action_remover" />


    </LinearLayout>

</LinearLayout>