<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:orientation="horizontal"
    android:id="@+id/linear_adapter_vendas"

    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nome_produto_venda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Base Líquida TimeWise® Acabamento Matte"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/text_disponiveis_avenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="" />

            <TextView
                android:id="@+id/tex_total_vendidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                 />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/text_preco_produto_venda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:text="64,00 R$"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>